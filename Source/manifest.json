{
  "manifest_version": 3,
  "name": "Dark Mode",
  "version": "1.1",
  "description": "A Smart, Intelligent, and Lightweight Dark Mode",
  "author": "Kyphion",
  "homepage_url": "https://github.com/Kyphion",
  "incognito": "spanning",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "96": "icon96.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "darkmode@kyphion"
    }
  }
}
